    <!-- Back to Top Button -->
    <div class="fixed bottom-8 right-8 z-50">
      <button 
        id="back-to-top"
        class="bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700 transition-all duration-300 opacity-0 invisible hover:scale-110">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
