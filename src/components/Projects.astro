---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="projects" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
          {t('projects.title')} <span class="text-blue-600">{t('projects.title.accent')}</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {t('projects.subtitle')}
        </p>
      </div>

      <!-- Project Filters -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="filter-btn active bg-blue-600 text-white px-6 py-2 rounded-full font-medium hover:bg-blue-700 transition-colors" data-filter="all">
          {t('projects.filter.all')}
        </button>
        <button class="filter-btn bg-gray-200 text-gray-700 px-6 py-2 rounded-full font-medium hover:bg-gray-300 transition-colors" data-filter="web">
          {t('projects.filter.web')}
        </button>
        <button class="filter-btn bg-gray-200 text-gray-700 px-6 py-2 rounded-full font-medium hover:bg-gray-300 transition-colors" data-filter="mobile">
          {t('projects.filter.mobile')}
        </button>
        <button class="filter-btn bg-gray-200 text-gray-700 px-6 py-2 rounded-full font-medium hover:bg-gray-300 transition-colors" data-filter="api">
          {t('projects.filter.api')}
